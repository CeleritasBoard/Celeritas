#ifndef I2C_SYNC_H
#define I2C_SYNC_H

#include "stm32f1xx_hal"

#define I2C_ADRESS 0x68
#define I2C_TIMSYNC_COMMAND 0x54

extern volatile uint32_t internalClock;
extern volatile uint8_t RxData[4];
extern volatile bool timesync;
extern volatile uint8_t rxcount;

void I2C_Init(void);
void I2C_ProcessData(void);
void I2C_ReceiveCallback(I2C_HandleTypeDef *hi2c);
void SysTick_Handler(void);

#endif
